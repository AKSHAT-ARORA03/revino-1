{
  "name": "dealer-loyalty-platform",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000 --strictPort",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "node start.js",
    "server": "node server/server.js",
    "dev:server": "nodemon server/server.js",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "start:both": "concurrently \"npm run start\" \"npm run server\"",
    "start:fixed": "node start-fixed-ports.js",
    "start:combined": "node start-combined.js",
    "fix:client-auth": "node -e \"require('./src/fixClientAuth.js')\"",
    "debug:mongodb": "node scripts/debug-mongodb.js",
    "db:delete-all": "node scripts/delete-all-data.js",
    "db:drop": "node scripts/drop-database.js",
    "db:reset": "node scripts/reset-to-defaults.js",
    "admin:set-permanent": "node scripts/set-permanent-superadmin.js",
    "admin:verify": "node scripts/verify-superadmin.js",
    "admin:fix-password": "node scripts/fix-superadmin-password.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^5.15.10",
    "@react-spring/web": "^9.7.3",
    "@tanstack/react-query": "^5.24.1",
    "axios": "^1.6.7",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "framer-motion": "^11.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "mongoose": "^8.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0",
    "sonner": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  }
}
